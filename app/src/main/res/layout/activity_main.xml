<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dice_1502706_1280"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/score"
        android:layout_width="413dp"
        android:layout_height="51dp"
        android:layout_marginTop="162dp"
        android:layout_marginBottom="61dp"
        android:background="@color/white"
        android:text="@string/score"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/additionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/rollButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="170dp"
        android:layout_marginBottom="361dp"
        android:text="@string/rollButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/substractButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resetButton" />

    <Button
        android:id="@+id/additionButton"
        android:layout_width="117dp"
        android:layout_height="39dp"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="34dp"
        android:text="@string/additionButton"
        app:layout_constraintBottom_toTopOf="@+id/substractButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/diceImageView"
        app:layout_constraintTop_toBottomOf="@+id/score" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="26dp"
        android:text="@string/resetButton"
        app:layout_constraintBottom_toTopOf="@+id/rollButton"
        app:layout_constraintEnd_toStartOf="@+id/diceImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score" />

    <Button
        android:id="@+id/substractButton"
        android:layout_width="117dp"
        android:layout_height="39dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="365dp"
        android:text="@string/substractButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/diceImageView"
        app:layout_constraintTop_toBottomOf="@+id/additionButton" />

    <ImageView
        android:id="@+id/diceImageView"
        android:layout_width="150dp"
        android:layout_height="78dp"
        app:layout_constraintBottom_toTopOf="@+id/score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dice_1" />

</androidx.constraintlayout.widget.ConstraintLayout>